<h1 class="text-center my-4 ">ALL BLOG POSTS</h1>

<% blogposts.map(blogpost => { %>
<div class="card my-3">

  <div class="card-body">

    <h5 class="card-title"><a href="/detail/<%= blogpost._id %>"><%= blogpost.title %></a></h5>
    <small class="text-muted">Posted by <strong><%= blogpost.author %></strong></small>

    <div class="post-body">
      <%= blogpost.body.slice(0, 250) %>... <a href="/detail/<%= blogpost._id %>">See more</a>
    </div>
    

  </div>

</div>
<% }) %>
